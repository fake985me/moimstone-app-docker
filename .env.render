# Render.com Deployment Environment Variables
# Copy ini ke Render Dashboard â†’ Environment Variables

# Application Settings
APP_NAME="MAI-App"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-app-name.onrender.com  # Ganti dengan URL Render Anda

# Generate APP_KEY dengan: php artisan key:generate --show
# Atau biarkan Render generate otomatis jika pakai render.yaml
APP_KEY=base64:YOUR_GENERATED_KEY_HERE

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration (PostgreSQL)
# Render akan auto-populate jika pakai render.yaml
# Atau ambil dari Internal Database URL
DB_CONNECTION=pgsql
DB_HOST=  # Dari Render PostgreSQL Internal URL
DB_PORT=5432
DB_DATABASE=mai_app
DB_USERNAME=  # Dari Render PostgreSQL
DB_PASSWORD=  # Dari Render PostgreSQL

# Cache & Session
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database  # Gunakan database untuk queue
SESSION_DRIVER=database    # Simpan session di database
SESSION_LIFETIME=120

# Redis (Optional - perlu service terpisah di Render)
# REDIS_HOST=
# REDIS_PASSWORD=
# REDIS_PORT=6379

# Mail Configuration (Opsional - sesuaikan dengan provider)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# File Upload Limits
UPLOAD_MAX_FILESIZE=10M
POST_MAX_SIZE=10M

# Timezone
APP_TIMEZONE=UTC

# Locale
APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

# Sanctum
SANCTUM_STATEFUL_DOMAINS=your-app-name.onrender.com
SESSION_DOMAIN=.onrender.com

# API URL (Not needed in production, will auto-detect from window.location.origin)
# VITE_API_URL will be empty/undefined in production, causing it to use current domain
